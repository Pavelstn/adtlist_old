  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseAgent">
        Закрепление агентов
      </a>
    </div>

    <div id="collapseAgent" class="accordion-body collapse">
      <div class="accordion-inner">
        <fieldset>
          <label>Агент</label>
          <select id="all_agents">
          </select>
          <button id="add_agent_button" class="btn btn-primary" type="button" >Добавить</button>
        </fieldset>
        <div class="row">
          <div class="span12" id="agent_list"></div> 
        </div>
      </div>
    </div>
  </div>
  
</div>
