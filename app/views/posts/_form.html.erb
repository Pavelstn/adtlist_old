<div class="row">
  <div class="span12"><%#= f.cktext_area :text, :width => 620, :height => 400 %><%= f.text_area :text, :width => 620, :height => 400, :id=>"text_field" %></div>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
